<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.carousel.MaskableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:foreground="?attr/selectableItemBackground"
    app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge">
    <LinearLayout
        android:id="@+id/progress_layout_carrusel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressParaImageViewCarrusel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fotito_carrusel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Fotito del carrusel"
        android:transitionName="image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/linea_bus" />
</com.google.android.material.carousel.MaskableFrameLayout>